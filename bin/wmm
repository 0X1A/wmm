#!/usr/bin/env ruby

require 'yaml'

home = ENV['HOME'] || raise("No $HOME found")
wms_file = "/.config/wmm/wmm.yml"
config = File.exists?(home + wms_file)

if config == false
	puts "Configuration ~/.config/wmm/wmm.yml not found"
else
	config = YAML.load_file("#{home}#{wms_file}")
	if config["exec"] != nil
		for i in config["exec"]
			system("#{i}")
		end
	end
	if config["background"] != nil
		for i in config["background"]
			system("#{i} &")
		end
	end
	if config["panel"] != nil
		system("#{config["panel"]} &")
	end
	if config["wm"] != nil
		exec("exec #{config["wm"]}")
	end
end
